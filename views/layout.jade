doctype html
html
    head
        if title
            title #{title} - GServer
        else
            title GServer
        link(rel='stylesheet', href='/stylesheets/bootstrap.min.css')
        link(rel='stylesheet', href='/stylesheets/style.css')
        script(language="javascript", src="/javascripts/jquery.min.js")
        script(language="javascript", src="/javascripts/bootstrap.min.js")
        block head
    body
        nav.navbar.navbar-default
            div.container
                div.navbar-header
                    button.navbar-toggle.collapsed(type="button", data-toggle="collapse", data-target="#bs-example-navbar-collapse-1", aria-expanded="false")
                        span.sr-only Toggle navigation
                        span.icon-bar
                    a.navbar-brand(href="/") GServer
                div.collapse.navbar-collapse#bs-example-navbar-collapse-1
                    ul.nav.navbar-nav.navbar-right
        div.container
            each flash in flash_massages
                div(class="alert alert-#{flash.catalogy}", role="alert") #{flash.msg}
            block content
